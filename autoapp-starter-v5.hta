<script language=JScript>

    window.onload = function () {
        var height = screen.availHeight - 500;
        self.resizeTo(640, height);
        self.moveTo(100, 50);
    } 


    function fnAddToPathList() {


        var sAppList = document.getElementById('PathList'); // point at the UL element via id

        var elem = document.getElementById("txtPathInputBox"); // Get text field contents

        var sPathInputContents = elem.value;
        
        var newEl = document.createElement('li'); // create a bullet point for the UL above
        var newText = document.createTextNode(sPathInputContents); // contents for the the new li
        // note: no IE 8 js trim() function for strings :-(

        newEl.appendChild(newText); // put the contents in the bullet point...

        sAppList.appendChild(newEl);
        elem.value = "Enter a path";
    } 

</script>
